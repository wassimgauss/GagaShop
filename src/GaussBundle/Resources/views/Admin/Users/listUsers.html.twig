{% block content %}
<section class="section products-grid second-style">
   <div class="container">
      <div class="row">

         {% block shop_sidebar %}
            {{ include ('@Gauss/Admin/layout/admin-sidebar.html.twig') }}
         {% endblock %}

          {% block shop_body %}
          <div class="col-md-9">
              <div class="masonry row">

                  <table id="category">
                      <thead>
                      <tr>
                      <th> ID</th>
                      <th> Username</th>
                      <th> Email</th>
                      <th> Enable</th>
                      <th> Activer_User</th>
                      <th> Code</th>

                      </tr>
                      </thead>
                      <tbody>

                      {% for user in listUsers %}
                      <tr>
                          <td> {{ user.id }}</td>
                          <td> {{ user.username }}</td>
                          <td> {{ user.email }}</td>
                        <td>
                          {% if user.enabled == 1 %}
                              <a href="" class="btn btn-primary"> TRUE </a>
                          {% else %}
                              <a href="" class="btn btn-danger"> FALSE </a>
                          {% endif %}
                          </td>
                          <td>
                              {% if user.enabled == 1 %}
                                  <a href="{{ path('adminpage_disable_users', {'id_user' : user.id }) }}" class="btn btn-warning"> Disable </a>
                              {% else %}
                                  <a href="{{ path('adminpage_enable_users', {'id_user' : user.id }) }}" class="btn btn-default"> Enable </a>
                              {% endif %}
                          </td>
                          <td> </td>

                      </tr>
                      {% endfor %}

                      </tbody>
                  </table>


              </div><!-- /.masonry -->
          </div>
          {% endblock %}
      </div><!-- /.row -->
      </div>
   </div><!-- /.container -->


</section><!-- /.products-grid -->
{% endblock %}

{% block brands %}

{% endblock %}

{% block footer %}
   {{ include ('@Gauss/Default/layout/footer.html.twig') }}

