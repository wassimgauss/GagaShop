{% extends "base.html.twig" %}

{% block navbar %}
      {{ include ('@Gauss/Default/layout/navbar.html.twig') }}
      <div class="page-head content-top-margin">
      <div class="container">
         <div class="row">
            <div class="col-md-8 col-sm-7">
               <ol class="breadcrumb">
                  <li><a href="index-2.html">Home</a></li>
                  <li class="active">Products</li>
               </ol>
            </div>
         </div><!-- /.row -->
      </div><!-- /.container -->
      </div><!-- /.page-head -->
{% endblock %}
{% block slider %}
   {#{{ include ('@Gauss/Default/layout/slider.html.twig') }}#}
{% endblock %}

{% block collection %}
  {# {{ include ('@Gauss/Default/layout/collection.html.twig') }}#}
{% endblock %}

{% block promotion %}
   {#{{ include ('@Gauss/Default/layout/promotion.html.twig') }}#}
{% endblock %}

{% block content %}
<section class="section products-grid second-style">
   <div class="container">
      <div class="row">

         {% block shop_sidebar %}
            {{ include ('@Gauss/Admin/layout/admin-sidebar.html.twig') }}
         {% endblock %}

          {% block shop_body %}
          <div class="col-md-9">
              <div class="masonry row">

                  <div class="col-md-6 col-lg-offset-3" style="background-color: #E0E0E0;">

                  {{ form_start(form, { 'attr': {'class': 'inputs-border'}}) }}
                      <div class="form-group">
                          <div class="required">
                  {{ form_widget(form.nom, { 'attr' : {'class' : 'form-control', 'placeholder' :  "Category 's name "} }) }}
                          </div>
                      </div>
                      <div class="form-group">
                  {{ form_widget(form.description, { 'attr' : {'class' : 'form-control', 'placeholder' :  "Category 's description "} }) }}
                      </div>
                  {{ form_errors(form) }}
                  {{ form_end(form) }}
                  </div>

              </div><!-- /.masonry -->
          </div>
          {% endblock %}
      </div><!-- /.row -->
      </div>
   </div><!-- /.container -->
</section><!-- /.products-grid -->
{% endblock %}

