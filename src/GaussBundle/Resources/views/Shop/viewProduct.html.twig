{% extends "base.html.twig" %}
{% block navbar %}
    <div class="container">
        <div class="row">
            {{ include ('@Gauss/Default/layout/navbar.html.twig') }}
            <div class="page-head content-top-margin">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-sm-7">
                        <ol class="breadcrumb">
                            <li><a href="{{ path('homepage') }}">{{ 'navbar.label_home'|trans }}</a></li>
                            <li><a href="{{ path('shoppage') }}">{{ 'navbar.label_shop'|trans }}</a></li>
                            <li class="active">{{ product.nameProduct }}</li>
                        </ol>
                    </div>
                    <div class="col-md-4 col-sm-5 header-nav text-right">
                        {% set id_next = product.id  %}
                        {% set id_prev = product.id  %}
                        {#{{ count[0][1] }}#}
                        {% if id_next < count[0][1] %}
                            {% set id_next = product.id + 1 %}
                        {% else %}
                            {% set id_next = 1 %}
                        {% endif %}

                        {% if id_prev >= 1 %}
                            {% set id_prev = count[0][1] %}
                        {% else %}
                            {% set id_next = product.id - 1 %}
                        {% endif %}
                        <a rel="previous" href="{{ path('adminpage_view_product', {'id_product' : id_prev }) }}"><i class="lil-angle-left"></i> {{ 'label_prev'|trans }}</a>
                        <a rel="next" href="{{ path('adminpage_view_product', {'id_product' : id_next  }) }}">{{ 'label_next'|trans }} <i class="lil-angle-right"></i></a>
                    </div>
                </div><!-- /.row -->
            </div><!-- /.container -->
        </div><!-- /.page-head -->
        </div>
    </div>
{% endblock %}

