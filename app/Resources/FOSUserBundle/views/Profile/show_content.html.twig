{% trans_default_domain 'FOSUserBundle' %}


<div class="page-wrapper" style="padding: 70px;">
    <section class="section" id="page-login">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-lg-offset-3">
                    <div class="box">
                        <h2>Profile</h2><br>


                        <div class="fos_user_user_show">
                            <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
                            <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
                        </div>

                    </div><!-- /.box -->
                    <div class="form-group text-right">
                        <a  href="{{ path('fos_user_profile_edit') }}" class="btn btn-default"> <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit Profile
                             </a>
                    </div>
                </div>


            </div><!-- /.row -->
        </div><!-- /.container -->
    </section><!-- #page-login -->
</div><!-- /.page-wrapper -->