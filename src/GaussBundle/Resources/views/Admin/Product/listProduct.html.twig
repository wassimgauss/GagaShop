{% block content %}
<section class="section products-grid second-style">
   <div class="container">
      <div class="row">

         {% block shop_sidebar %}
            {{ include ('@Gauss/Admin/layout/admin-sidebar.html.twig') }}
         {% endblock %}

          {% block shop_body %}
          <div class="col-md-9">
              <div class="masonry row">

                  <table id="category">
                      <thead>
                      <tr>
                      <th> ID</th>
                      <th> Picture</th>
                      <th> Name</th>
                      <th> Description</th>
                      <th> Current Price</th>
                      <th> Other Price</th>
                      <th> Status</th>
                      <th> Code</th>

                      </tr>
                      </thead>
                      <tbody>

                      {% for product in listProduct %}
                      <tr>
                          <td> {{ product.id }}</td>
                          {% if product.image is not null %}
                          <td> <img src="{{ asset(product.image.webPAth) }}" class="img-responsive" style=""> </td>
                          {% else %}
                          <td> <img src="{{ asset('build/img/products/p.png') }}" class="img-responsive" style=""> </td>
                          {% endif %}
                          <td> {{ product.nameProduct }}</td>
                          <td> {{ product.descriptionProduct }}</td>
                          <td> {{ product.currentPrice }}</td>
                          <td> {{ product.otherPrice }}</td>
                          <td> {{ product.statusProduct }}</td>
                          <td> {{ product.codeProduct }}</td>

                      </tr>
                      {% endfor %}

                      </tbody>
                  </table>


              </div><!-- /.masonry -->
          </div>
          {% endblock %}
      </div><!-- /.row -->
      </div>
   </div><!-- /.container -->


</section><!-- /.products-grid -->
{% endblock %}

{% block brands %}

{% endblock %}

