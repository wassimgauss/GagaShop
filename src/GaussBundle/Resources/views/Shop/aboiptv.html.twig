{% extends "base.html.twig" %}
{% block title %} {{ parent() }} | Abonnement IPTV {% endblock %}
{% block navbar %}
    <div class="container">
        <div class="row">
            {{ include ('@Gauss/Default/layout/navbar.html.twig') }}

      <div class="page-head content-top-margin">
      <div class="container">
         <div class="row">
            <div class="col-md-8 col-sm-7">
               <ol class="breadcrumb">
                   <li><a href="{{ path('homepage') }}">{{ 'navbar.label_home'|trans }}</a></li>
                  <li class="active">Abonnement IPTV</li>
               </ol>
            </div>
         </div><!-- /.row -->
      </div><!-- /.container -->
      </div><!-- /.page-head -->

        </div>
    </div>
{% endblock %}
{% block content %}
<section class="section products-grid second-style" style="margin-top: -50px;">
   <div class="container">
      <div class="row">
         {% block shop_sidebar %}
            {{ include ('@Gauss/Shop/layout/shop-sidebar.html.twig') }}
         {% endblock %}

          {% block content_shop %}
              <div class="col-lg-offset-0 col-md-9">
                {% for iptv in listIptv %}
              <div class="product col-lg-6 col-md-6">
                  <!-- START PRICING TABLE -->
                  <div class="pricing-option">
                      <div class="pricing-top">
                          {% if (iptv.statusProduct == 1) %}
                              <span class="special-label">Sale!</span>
                          {% elseif (iptv.statusProduct == 2) %}
                              <span class="special-label">Hot!</span>
                          {% elseif (iptv.statusProduct == 3) %}
                              <span class="special-label">New!</span>
                          {% endif %}
                          <span class="pricing-edition">{{ iptv.nameProduct }}</span>
                            <span class="price">
                                <sup>$</sup>
                                <span class="price-amount">{{ iptv.currentPrice }}</span>
                                <small>/{{ iptv.duree }}</small>
                            </span>

                      </div>
                      <ul>
                          <li style="background-color:#EEEEEE"> {{ iptv.descriptionProduct|truncate(120, false, "..") }}</li>

                              <div class="product-details text-center">
                                  <div class="product-btns">
										<span data-toggle="tooltip" data-placement="top" title="Add To Cart">
											<a href="{{ path('adminpage_add_to_cart',{'id_product' : iptv.id,'nom_product' : iptv.nameproductUrl }) }}" class="li-icon add-to-cart" style="background-color: #e74c3c"><i class="lil-shopping_cart"></i></a>
										</span>
										<span data-toggle="tooltip" data-placement="top" title="Add to Favorites">
											<a href="{{ path('adminpage_add_to_wish',{'id_product' : iptv.id,'nom_product' : iptv.nameproductUrl }) }}" class="li-icon" style="background-color: #e74c3c"><i class="lil-favorite"></i></a>
										</span>
										<span data-toggle="tooltip" data-placement="top" title="View">
											<a href="{{ path('adminpage_view_product', {'nom_product' : iptv.nameproductUrl}) }}" class="li-icon view-details" style="background-color: #e74c3c"><i class="lil-search"></i></a>
										</span>
                                  </div>
                              </div>

                      </ul>
                  </div><!-- /pricing-option -->
                  <!-- END PRICING TABLE -->
              </div><!-- /col -->
                {% endfor %}
              </div>
          {% endblock %}
      </div><!-- /.container -->
      </div>
       <div style="margin-top: 60px;" class="footer">
           {{ include ('@Gauss/Default/layout/footer-menu.html.twig') }}
       </div>
</section><!-- /.AboIptv-grid -->
{% endblock %}

{% block brands %}

{% endblock %}

{% block footer %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

{% endblock %}
